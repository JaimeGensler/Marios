<%= stylesheet_link_tag 'form', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class='main-form'>
    <h2><%= "#{form_text} Product"%></h2>
    <%= render "layouts/errors", :object => @product %>

    <%= form_for @product do |f| %>
        <%= f.label :name, 'Product Name:' %>
        <%= f.text_field :name %>
        <%= f.label :description, 'Description:' %>
        <%= f.text_field :description %>
        <%= f.label :picture, 'Photo URL:' %>
        <%= f.text_field :picture %>
        <%= f.label :cost, 'Price:' %>
        <%= f.text_field :cost %>
        <%= f.label :country_of_origin, 'Country of Origin:' %>
        <%= f.text_field :country_of_origin %>
        <%= button_tag 'Create product!'%>
    <% end %>

    <p><%= link_to 'Back to list of products', products_path %>!</p>
</div>
