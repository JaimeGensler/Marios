<div class='main-form'>
    <h2>Sign In</h2>
    <%= form_tag signin_path do %>
        <%= label_tag :email, 'Username or Email' %>
        <%= text_field_tag :email %>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= button_tag 'Sign me in!'%>
    <% end %>
    <p>New here? <%= link_to 'Register an account', new_user_path %>!</p>
</div>
