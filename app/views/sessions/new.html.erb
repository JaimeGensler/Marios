<%= stylesheet_link_tag 'form', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='main-form'>
    <h2>Sign In</h2>
    <%= form_tag signin_path do %>
        <%= label_tag :ident, 'Username or Email' %>
        <%= text_field_tag :ident %>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= button_tag 'Sign me in!'%>
    <% end %>
    <p>New here? <%= link_to 'Register an account', new_user_path %>!</p>
</div>
