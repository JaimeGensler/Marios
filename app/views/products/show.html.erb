<div class='container'>

<h2 class='red-white'>Product: <%= @product.name %></h2>

<% if @product.reviews.any? %>
<h4>Product Reviews:</h4>
<ul class='reviews'>
    <% @product.reviews.each do |review| %>
        <li>
            "<%= link_to review.content_body, product_review_path(@product, review) %>" - <%= review.author %>
        </li>
<% end %>
</ul>
<% else %>
    <p>There are no reviews for this product yet!</p>
<% end %>
<p><%= link_to "Add a review", new_product_review_path(@product), class: 'new' %></p>


<div class='edit-delete'>
    <p class='edit'><%= link_to 'Edit Product', edit_product_path(@product) %></p>
    <p class='delete'>
        <%=
            link_to 'Delete Product', product_path(@product),
            data: {
                confirm: "Are you certain you want to delete product '#{@product.name}'?",
                method: 'delete'
            }
        %>
    </p>
</div>

<p><%= link_to 'Return to list of products', products_path %></p>
</div>
