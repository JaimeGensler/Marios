<h2><%= @product.name %></h2>

<p><%= link_to 'Edit', edit_product_path(@product) %></p>
<p><%= link_to 'Delete', product_path(@product),
        data: {
            confirm: "Are you certain you want to delete '#{@product.name}'?",
            method: 'delete'
        }
    %>
</p>

<p><%= link_to 'Return to list of products', products_path %></p>
